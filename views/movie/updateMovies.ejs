<div class="row mt-5">
  <div class="col-md-6 m-auto">
         <div class="card card-body">
          <h1 class="text-center mb-3">
            <i class="fas fa-user-plus"></i> Update Movies
          </h1>
          <% include ../messages %>
          <form action="/movies/update" method="POST">
            <div class="form-group">
              <label for="name">Name</label>
              <input type="hidden" value="<%= movie._id %>" name="id">
              <input
                type="name"
                id="name"
                name="name"
                class="form-control"
                placeholder="Enter Name"
                value="<%= movie.name %>"
              />
            </div>
            <div class="form-group">
              <label for="email">Release Date</label>
              <input
                type="date"
                id="date"
                name="date"
                class="form-control"
                value="<%= newDate %>"
                placeholder="Enter Release Date"
              />
            </div>
 
            <button type="submit" class="btn btn-primary btn-block">
              Add Movies
            </button>
          </form>
 
         </div>
  </div>
 </div>